<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raul.calculadora.MainActivity"
    android:background="@android:drawable/alert_dark_frame">

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/tv"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        android:hapticFeedbackEnabled="true"
        android:gravity="bottom|right"
        android:textAllCaps="true"
        android:textSize="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <Button
                android:text="C"
                android:layout_width="0dp"
                android:id="@+id/bC"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarC" />

            <Button
                android:text="+/-"
                android:layout_width="0dp"
                android:id="@+id/button22"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp" />

            <Button
                android:text="%"
                android:layout_width="0dp"
                android:id="@+id/button21"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp" />

            <Button
                android:text="/"
                android:layout_width="0dp"
                android:id="@+id/bDividir"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarOperador" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="7"
                android:layout_width="0dp"
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="8"
                android:layout_width="0dp"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="9"
                android:layout_width="0dp"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="X"
                android:layout_width="0dp"
                android:id="@+id/bMultiplicar"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarOperador" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="4"
                android:layout_width="0dp"
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="5"
                android:layout_width="0dp"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="6"
                android:layout_width="0dp"
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="-"
                android:layout_width="0dp"
                android:id="@+id/bRestar"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarOperador" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="1"
                android:layout_width="0dp"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="2"
                android:layout_width="0dp"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="3"
                android:layout_width="0dp"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="+"
                android:layout_width="0dp"
                android:id="@+id/bSumar"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarOperador" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="0"
                android:id="@+id/b0"
                android:layout_weight="1"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero" />

            <Button
                android:text="."
                android:layout_width="0dp"
                android:id="@+id/bComa"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarNumero (MainActivity)" />

            <Button
                android:text="="
                android:layout_width="0dp"
                android:id="@+id/bResultado"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:onClick="pulsarIgual" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
